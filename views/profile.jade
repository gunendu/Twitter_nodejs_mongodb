h2(class='username') #{logedInUser}
- if (username != logedInUser) {
    - if ( !is_following ) {
        a(class="button", href="/follow?u="+username+"&f=1") Follow this user
    - } else {
        a(class="button", href="/follow?u="+username+"&f=0") Stop follow
    - }
- }

- if (posts.length)
    - posts.forEach(function(post) {
      div(class='post')
        a(class='username', href='/profile?u='+post.username) #{post.username}
        | #{post.tweet}
        i posted #{post.date} ago via web
    - })
